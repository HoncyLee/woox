# WOOX Trading Bot Configuration Template
# Copy this file to .env and fill in your values

# Note: WOOX_API_KEY and WOOX_API_SECRET are loaded from environment variables (.zshrc)
# No need to set them here

# Trading Configuration
TRADE_MODE=paper
SYMBOL=SPOT_BTC_USDT
BASE_URL=https://api.woox.io

# Strategy Parameters
SHORT_MA_PERIOD=20
LONG_MA_PERIOD=50
STOP_LOSS_PCT=2.0
TAKE_PROFIT_PCT=3.0

# Data Configuration
MAX_HISTORY_MINUTES=1440
UPDATE_INTERVAL_SECONDS=60

# Trading Parameters
TRADE_AMOUNT_USD=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=trade.log
