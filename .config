# WOOX Trading Bot Configuration
# All configuration settings for the trading bot

# API Configuration
# Note: WOOX_API_KEY and WOOX_API_SECRET are loaded from environment variables (.zshrc)
# Set them in your shell: export WOOX_API_KEY='your_key' and export WOOX_API_SECRET='your_secret'
# Get your API credentials from https://x.woo.org (Settings â†’ API Management)

# Trading Configuration , TRADE_MODE=paper or live
TRADE_MODE=live
SYMBOL=PERP_BTC_USDT
BASE_URL=https://api.woox.io

# Strategy Selection
# Available strategies: ma_crossover, rsi, bollinger_bands
ENTRY_STRATEGY=ma_crossover
EXIT_STRATEGY=ma_crossover

# Strategy Parameters - Moving Average Crossover
SHORT_MA_PERIOD=3
LONG_MA_PERIOD=20

# Dashboard Settings
# Refresh rate for position and order history sync (in seconds)
POSITION_REFRESH_RATE=60
# Order history display window (in hours)
ORDER_HISTORY_HOURS=72

# Strategy Parameters - RSI
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Strategy Parameters - Bollinger Bands
BB_PERIOD=20
BB_STD_DEV=2.0

# Exit Parameters (used by all strategies)
STOP_LOSS_PCT=3.09
TAKE_PROFIT_PCT=5

# Data Configuration
MAX_HISTORY_MINUTES=1440
UPDATE_INTERVAL_SECONDS=60

# Trading Parameters
TRADE_AMOUNT_USD=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=trade.log
TRADE_TYPE=future
MAX_POS_SIZE_TYPE=quantity
MAX_POS_SIZE_VALUE=0.0005
MAX_OPEN_POSITIONS=1
MA_TIMEFRAME=60
MA_THRESHOLD=0
RSI_TIMEFRAME=60
